[user]
	name = syotaro
	email = syosyo666@gmail.com
[color]
  ui            = auto
  status        = auto
  branch        = auto
  grep          = auto
[core]
  pager         = lv -c
	excludesfile = /Users/syotaro/.gitignore.global
  quotepath     = false
  editor = vim
  #  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[tig "bind"]
  generic       = g move-first-line
  generic       = G move-last-line
[pull]
  rebase         = true                # pullのデフォルトが--rebaseに
[push]
  default = simple                   # カレントブランチと同名のリモートブランチが存在する場合のみ、カレントブランチのpushが行われる
[merge]
	tool = Kaleidoscope
  ff            = false               # mergeのデフォルトが--no-ffに
[grep]
  lineNumber    = true
[include]
  path          = .gitconfig.local
[github]
  user = syotaro
[url "git@github.com:syotaro/"]
  insteadof     = gh:
[alias]
      # status
  st            = status
  co            = checkout
  d             = diff
  ksdiff        = difftool -y -t Kaleidoscope
  dc            = diff --cached
  s             = status
  ss            = status -s
  po            = push origin         # push origin
      # merge
  mn            = merge --no-ff
  co            = checkout
      # branch
  ba            = branch -a           # originも含めた全てのbranchを表示
  bm            = branch --merged     # merge済みのbranchを表示
  bn            = branch --no-merged  # mergeしてないbranchを表示
[http]
  sslVerify = false

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[hub]
protocol = https
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
