[include]
  path          = ~/.gitconfig.local  # ユーザ名などは、公開したくないので別ファイル化
[color]
  ui            = true
  status        = auto
  branch        = auto
  grep          = auto
[core]
  pager         = lv -c
  excludesfile = /Users/syotaro/.gitignore.global
  quotepath     = false
  editor = vim
#  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[tig "bind"]
  generic       = g move-first-line
  generic       = G move-last-line
[push]
  default = simple                   # カレントブランチと同名のリモートブランチが存在する場合のみ、カレントブランチのpushが行われる
[merge]
	tool = Kaleidoscope
[grep]
  lineNumber    = true
[github]
  user = syotaro
[url "git@github.com:syotaro/"]
  insteadof     = gh:
[alias]
      # status
  st            = status
  co            = checkout
  d             = diff
  vdiff         = difftool -y -t Vim
  vd            = difftool -y -t Vim
  ksdiff        = difftool -y -t Kaleidoscope
  dc            = diff --cached
  s             = status
  ss            = status -s
  po            = push origin         # push origin
  mn            = merge --no-ff
  co            = checkout
  ba            = branch -a           # originも含めた全てのbranchを表示
  bm            = branch --merged     # merge済みのbranchを表示
  bn            = branch --no-merged  # mergeしてないbranchを表示
[http]
  sslVerify = false
[pager]
#  vdiff =
  diff  = diff-highlight | nkf -w
  log   = diff-highlight | nkf -w | LESS=-R less
  show  = diff-highlight | nkf -w | LESS=-R less
[hub]
protocol = https
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
#[diff]
#	tool = Kaleidoscope
[difftool "Vim"]
	cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
#[diff "xlsx"]        # https://github.com/yappo/p5-git-xlsx-textconv.pl
#    binary = true
#    textconv = $GOPATH/bin/git-xlsx-textconv
[diff]
	tool = Kaleidoscope
