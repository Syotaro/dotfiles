[user]
	name = Shotaro.Yamamoto
	email = shotaro.yamamoto@gree.net
[color]
  ui            = auto
  status        = auto
  branch        = auto
  grep          = auto
[core]
  pager         = lv -c
  excludesfile  = ~/.gitignore  # globalな.gitignoreの指定
  quotepath     = false
  editor = vim
  #  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[tig "bind"]
  generic       = g move-first-line
  generic       = G move-last-line
[pull]
  rebase         = true                # pullのデフォルトが--rebaseに
[push]
#	default = simple                   # カレントブランチと同名のリモートブランチが存在する場合のみ、カレントブランチのpushが行われる
[merge]
  tool = vimdiff
  ff            = false               # mergeのデフォルトが--no-ffに
[grep]
  lineNumber    = true
[include]
  path          = .gitconfig.local
[github]
	user = shotaro-yamamoto
[url "git@github.com:syotaro/"]
  insteadof     = gh:
[alias]
      # status
  st            = status
  co            = checkout
  d             = diff
  dc            = diff --cached
  s             = status
  ss            = status -s
  po            = push origin         # push origin
      # merge
  mn            = merge --no-ff
  co            = checkout
      # branch
  ba            = branch -a           # originも含めた全てのbranchを表示
  bm            = branch --merged     # merge済みのbranchを表示
  bn            = branch --no-merged  # mergeしてないbranchを表示
[http]
  sslVerify = false

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[hub]
protocol = https
